<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ArcadeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Choose a game.."
            android:textSize="28sp"
            android:textColor="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHeadline">

            <androidx.cardview.widget.CardView
                android:id="@+id/btRockPaperScissors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:background="@color/fillPrimary">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/fillPrimary">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv1"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_rock_paper_scissors"
                        android:tint="@color/action"
                        android:layout_marginStart="10dp"
                        android:layout_marginVertical="10dp"
                        app:shapeAppearanceOverlay="@style/roundedImageView"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Rock Paper Scissors"
                        android:fontFamily="@font/alegreya_sans"
                        android:textColor="@color/primary"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@id/iv1"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btTicTacToe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:background="@color/fillPrimary">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/fillPrimary">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv2"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_tic_tac_toe"
                        android:tint="@color/action"
                        android:layout_marginStart="10dp"
                        android:layout_marginVertical="10dp"
                        app:shapeAppearanceOverlay="@style/roundedImageView"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Tic Tac Toe"
                        android:fontFamily="@font/alegreya_sans"
                        android:textColor="@color/primary"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@id/iv2"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btFourInARow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:background="@color/fillPrimary">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/fillPrimary">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv3"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_connect_four"
                        android:tint="@color/action"
                        android:layout_marginStart="10dp"
                        android:layout_marginVertical="10dp"
                        app:shapeAppearanceOverlay="@style/roundedImageView"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Connect Four"
                        android:fontFamily="@font/alegreya_sans"
                        android:textColor="@color/primary"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@id/iv3"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>